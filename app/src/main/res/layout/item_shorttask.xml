<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_card_task"
        android:elevation="2dp"
        android:padding="12dp"
        android:id="@+id/clRoot">

    <TextView
            android:id="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circe_bold"
            android:lineSpacingMultiplier="0.75"
            android:text="Плановый медосмотр"
            android:textColor="#000"
            android:textSize="20sp" />


    <ImageView
            android:id="@+id/icLocation1"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_location_gray" />

    <TextView
            android:id="@+id/tvLocation"
            app:layout_constraintBottom_toBottomOf="@+id/icLocation1"
            app:layout_constraintStart_toEndOf="@+id/icLocation1"
            app:layout_constraintTop_toTopOf="@+id/icLocation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Главный корпус"
            android:textColor="#8F8F8F" />

    <TextView
            android:id="@+id/tvTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icLocation1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gilroy_medium"
            android:text="9:00 — 10:00"
            android:textColor="#000"
            android:textSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>